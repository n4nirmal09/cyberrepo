#network-section.detect-animate(data-animation="from-bottom--stagger")
  header.network-section__header
    div.network-section__header-title
      h3.network-section__header-title-h3 Agentless and Flexible Deployment:<br>
        span.network-section__header-title-sub Centralized architecture for simple and scalable deployment across large distributed networks
  div.network-section__network-stage#network-stage.network-stage
    div.network-stage__canvas
      include ../components/network-stage-component.pug
      include ../mixins/arrow-mixin.pug
    div.network-stage__arrow.network-stage__arrow--prev 
      span.network-stage__arrow-span
        +nav-arrow('nav-arrow--blue', 'left')
    div.network-stage__arrow.network-stage__arrow--next
      span.network-stage__arrow-span
        +nav-arrow('nav-arrow--blue', 'right')